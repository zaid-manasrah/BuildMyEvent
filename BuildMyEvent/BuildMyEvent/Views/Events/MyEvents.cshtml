@model IEnumerable<BuildMyEvent.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<section id="my-events" class="py-5" style="min-height: 80vh; background-color: #f8fafc;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">My Events</h1>
                <p class="text-muted mb-0">Manage your events, links, and attendees.</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Home")#templates" class="btn btn-primary">
                    Create new event
                </a>



            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <h5 class="mb-2">You have not created any events yet.</h5>
                    <p class="text-muted mb-4">
                        Start by choosing a template and creating your first event page.
                    </p>
                    <a href="@Url.Action("Index", "Home")#templates" class="btn btn-primary">
                        Choose a template
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:25%;">Name</th>
                                    <th style="width:20%;">Public link</th>
                                    <th style="width:10%;">Template</th>
                                    <th style="width:10%;">Attendees</th>
                                    <th style="width:35%;" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ev in Model)
                                {
                                    var attendeesCount = ev.Registrations?.Count ?? 0;
                                    <tr>
                                        <td>@ev.Name</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Events", new { slug = ev.Slug })" target="_blank">
                                                @Url.Action("Details", "Events", new { slug = ev.Slug }, Context.Request.Scheme)
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-dark">@ev.TemplateKey</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@attendeesCount</span>
                                        </td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-primary"
                                               href="@Url.Action("Attendees", "Events", new { id = ev.Id })">
                                                View attendees
                                            </a>

                                            <a class="btn btn-sm btn-outline-secondary ms-1"
                                               href="@Url.Action("Edit", "Events", new { id = ev.Id })">
                                                Edit
                                            </a>

                                            <form asp-action="Delete"
                                                  asp-controller="Events"
                                                  method="post"
                                                  class="d-inline ms-1"
                                                  onsubmit="return confirm('Are you sure you want to delete this event?');">
                                                <input type="hidden" name="id" value="@ev.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

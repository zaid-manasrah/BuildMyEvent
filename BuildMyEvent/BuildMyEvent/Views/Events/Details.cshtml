else if (Model.TemplateKey == "minimalist")
{
    <nav class="navbar navbar-expand-lg navbar-light"
         style="background-color:#ffffff;border-bottom:1px solid #e5e5e5;" id="top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#top">@Model.Name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#eventNavMinimal">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="eventNavMinimal">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#minimal-hero">Overview</a></li>
                    <li class="nav-item"><a class="nav-link" href="#minimal-info">Info</a></li>
                    <li class="nav-item"><a class="nav-link" href="#minimal-share">Share</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="event-details-minimal"
             style="font-family: 'Inter', system-ui, sans-serif; background-color: #fff; overflow-x: hidden;">
        <div id="minimal-hero" class="row g-0 align-items-stretch" style="min-height: 80vh;">
            <div class="col-lg-6 order-lg-2">
                <div class="h-100 w-100"
                     style="background: url('https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?auto=format&fit=crop&w=1200&q=90')
                                center/cover no-repeat; min-height: 400px;">
                </div>
            </div>
            <div class="col-lg-6 order-lg-1 d-flex align-items-center bg-white">
                <div class="p-5">
                    <span class="d-inline-block border-bottom border-dark border-2 text-uppercase fw-bold ls-2 mb-4 pb-1"
                          style="letter-spacing: 2px; font-size: 0.8rem;">Event Details</span>
                    <h1 class="display-4 fw-bold text-dark mb-3">@minimalHeroTitle</h1>
                    <p class="text-secondary fs-5 fw-light mb-3"
                       style="line-height: 1.7; max-width: 500px;">@minimalHeroSubtitle</p>

                    @if (isOwner)
                    {
                        <div class="alert alert-info d-inline-flex align-items-center py-2 px-3 mb-3" role="alert">
                            <i class="bi bi-people me-2"></i>
                            <span>Registrations: <strong>@registrationsCount</strong></span>
                            <a asp-controller="Events"
                               asp-action="Attendees"
                               asp-route-id="@Model.Id"
                               class="btn btn-sm btn-outline-dark ms-3">
                                View attendees
                            </a>
                        </div>
                    }

                    <div class="d-flex flex-wrap gap-3 mb-4">
                        <a class="btn btn-dark rounded-0 px-5 py-3 fw-medium"
                           href="@Url.Action("Register", "Registrations", new { slug = Model.Slug })">
                            @minimalCtaText
                        </a>
                        @if (isOwner)
                        {
                            <a class="btn btn-outline-dark rounded-0 px-5 py-3"
                               href="@Url.Action("Edit", "Events", new { id = Model.Id })">
                                Edit Event
                            </a>
                        }
                    </div>

                    <div id="minimal-info" class="pt-4 mt-3 border-top">
                        <div class="row">
                            <div class="col-md-10">
                                <h6 class="fw-bold mb-2">@minimalInfoTitle</h6>
                                <p class="text-muted small mb-3">@minimalInfoBody</p>
                                <div id="minimal-share" class="d-flex align-items-center gap-2">
                                    <small class="text-uppercase fw-bold text-muted" style="font-size: 0.7rem;">Share:</small>
                                    <a href="@publicLink" class="text-dark text-decoration-none border-bottom small">
                                        @publicLink
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (Model.TemplateKey == "colorful")
{
    <nav class="navbar navbar-expand-lg navbar-light"
         style="background: linear-gradient(90deg,#8EC5FC,#E0C3FC);" id="top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#top">@Model.Name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#eventNavColorful">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="eventNavColorful">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#colorful-hero">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#colorful-highlights">Highlights</a></li>
                    <li class="nav-item"><a class="nav-link" href="#colorful-link">Link</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="event-details-colorful" style="font-family: 'Verdana', sans-serif;">
        <div id="colorful-hero" class="position-relative py-5"
             style="background: linear-gradient(135deg, #8EC5FC 0%, #E0C3FC 100%);">
            <div style="position: absolute; top: 10%; right: 5%; width: 300px; height: 300px;
                            background: #FF9A9E; filter: blur(80px); opacity: 0.6; border-radius: 50%;"></div>
            <div style="position: absolute; bottom: 10%; left: 5%; width: 400px; height: 400px;
                            background: #a18cd1; filter: blur(80px); opacity: 0.6; border-radius: 50%;"></div>

            <div class="container position-relative z-2 py-5 text-center">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="bg-white bg-opacity-25 backdrop-blur rounded-4 p-5 shadow-sm"
                             style="backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.4);">
                            <h1 class="display-3 fw-bold mb-3"
                                style="background: -webkit-linear-gradient(45deg, #333, #666);
                                           -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                                @colorfulHeroTitle
                            </h1>
                            <p class="fs-4 mb-3 text-dark opacity-75">@colorfulHeroSubtitle</p>

                            @if (isOwner)
                            {
                                <div class="alert alert-info d-inline-flex align-items-center py-2 px-3 mb-3 bg-opacity-75"
                                     role="alert">
                                    <i class="bi bi-people me-2"></i>
                                    <span>Registrations: <strong>@registrationsCount</strong></span>
                                    <a asp-controller="Events"
                                       asp-action="Attendees"
                                       asp-route-id="@Model.Id"
                                       class="btn btn-sm btn-outline-dark ms-3">
                                        View attendees
                                    </a>
                                </div>
                            }

                            <div class="d-flex justify-content-center gap-3 mt-2">
                                <a class="btn btn-dark btn-lg rounded-pill px-5 shadow-sm border-0"
                                   style="background: #222;"
                                   href="@Url.Action("Register", "Registrations", new { slug = Model.Slug })">
                                    @colorfulCtaText
                                </a>
                                @if (isOwner)
                                {
                                    <a class="btn btn-outline-dark fw-bold btn-lg rounded-pill px-5 border-2"
                                       href="@Url.Action("Edit", "Events", new { id = Model.Id })">
                                        Edit Event
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="colorful-highlights" class="container py-5 z-2 position-relative">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-4 shadow-sm"
                             style="background: rgba(255,255,255,0.8); backdrop-filter: blur(20px);">
                            <div class="card-body p-4 text-center">
                                <div class="mb-3 d-inline-block p-3 rounded-circle bg-warning text-white shadow-sm">
                                    <i class="bi bi-stars fs-2"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Experience</h5>
                                <p class="text-muted mb-0">@colorfulHighlight1</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-4 shadow-sm"
                             style="background: rgba(255,255,255,0.8); backdrop-filter: blur(20px);">
                            <div class="card-body p-4 text-center">
                                <div class="mb-3 d-inline-block p-3 rounded-circle bg-danger text-white shadow-sm">
                                    <i class="bi bi-heart-fill fs-2"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Community</h5>
                                <p class="text-muted mb-0">@colorfulHighlight2</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 rounded-4 shadow-sm"
                             style="background: rgba(255,255,255,0.8); backdrop-filter: blur(20px);">
                            <div class="card-body p-4 text-center">
                                <div class="mb-3 d-inline-block p-3 rounded-circle bg-primary text-white shadow-sm">
                                    <i class="bi bi-palette-fill fs-2"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Create</h5>
                                <p class="text-muted mb-0">@colorfulHighlight3</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="colorful-link" class="row justify-content-center mt-5">
                    <div class="col-auto">
                        <div class="bg-white bg-opacity-50 px-4 py-2 rounded-pill shadow-sm">
                            <span class="fw-bold small me-2">LINK:</span>
                            <a href="@publicLink" class="text-dark text-decoration-none small font-monospace">
                                @publicLink
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else if (Model.TemplateKey == "academic")
{
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#0b1726;" id="top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#top">@Model.Name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#eventNavAcademic">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="eventNavAcademic">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#academic-hero">Overview</a></li>
                    <li class="nav-item"><a class="nav-link" href="#academic-tracks">Tracks</a></li>
                    <li class="nav-item"><a class="nav-link" href="#academic-share">Citation link</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="event-details-academic" style="background-color: #f8f9fa; font-family: 'Merriweather', serif;">
        <div id="academic-hero" class="position-relative text-white"
             style="background: linear-gradient(rgba(13, 37, 63, 0.85), rgba(13, 37, 63, 0.9)),
                         url('https://images.unsplash.com/photo-1507842217343-583bb726cc2e?auto=format&fit=crop&w=1920&q=80')
                         center/cover no-repeat;">
            <div class="container py-5">
                <div class="row align-items-center py-4">
                    <div class="col-lg-8 mb-4 mb-lg-0">
                        <div class="d-inline-block border border-light border-opacity-25 bg-white bg-opacity-10
                                        px-3 py-1 rounded-pill mb-3 fw-bold small text-uppercase"
                             style="font-family: sans-serif; letter-spacing: 1px;">
                            Academic Conference
                        </div>
                        <h1 class="fw-bold mb-3 display-4">@academicHeroTitle</h1>
                        <p class="text-white-50 fs-5 mb-3" style="line-height: 1.8;">@academicHeroSubtitle</p>

                        @if (isOwner)
                        {
                            <div class="alert alert-info d-inline-flex align-items-center py-2 px-3 mb-3 bg-opacity-75"
                                 role="alert">
                                <i class="bi bi-people me-2"></i>
                                <span>Registrations: <strong>@registrationsCount</strong></span>
                                <a asp-controller="Events"
                                   asp-action="Attendees"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-sm btn-outline-light ms-3">
                                    View attendees
                                </a>
                            </div>
                        }

                        <div class="d-flex gap-2 mt-2">
                            <a class="btn btn-light btn-lg px-4 text-dark fw-bold"
                               style="font-family: sans-serif;"
                               href="@Url.Action("Register", "Registrations", new { slug = Model.Slug })">
                                @academicCtaText
                            </a>
                            @if (isOwner)
                            {
                                <a class="btn btn-outline-light btn-lg px-4"
                                   style="font-family: sans-serif;"
                                   href="@Url.Action("Edit", "Events", new { id = Model.Id })">
                                    Edit Event
                                </a>
                            }
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div id="academic-share"
                             class="card border-0 bg-white bg-opacity-10 text-white p-3 backdrop-blur shadow-sm">
                            <div class="card-body">
                                <h6 class="fw-bold text-uppercase mb-3"
                                    style="font-family: sans-serif; font-size: 0.8rem; letter-spacing: 1px;">
                                    @academicShareTitle
                                </h6>
                                <p class="small text-white-50 mb-2">Permanent link for citation:</p>
                                <div class="bg-dark bg-opacity-50 border border-secondary p-2 rounded
                                                text-break font-monospace small text-light">
                                    @publicLink
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="academic-tracks" class="container py-5">
            <div class="row g-4" style="margin-top: -50px;">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 border-top border-4 border-primary">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle
                                                d-flex align-items-center justify-content-center me-3"
                                     style="width: 48px; height: 48px;">
                                    <i class="bi bi-journal-text fs-4"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-0" style="font-family: sans-serif;">
                                    @academicTrack1Title
                                </h5>
                            </div>
                            <p class="card-text text-secondary">@academicTrack1Body</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 border-top border-4 border-success">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle
                                                d-flex align-items-center justify-content-center me-3"
                                     style="width: 48px; height: 48px;">
                                    <i class="bi bi-briefcase fs-4"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-0" style="font-family: sans-serif;">
                                    @academicTrack2Title
                                </h5>
                            </div>
                            <p class="card-text text-secondary">@academicTrack2Body</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4 border-top border-4 border-warning">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle
                                                d-flex align-items-center justify-content-center me-3"
                                     style="width: 48px; height: 48px;">
                                    <i class="bi bi-lightbulb fs-4"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-0" style="font-family: sans-serif;">
                                    @academicTrack3Title
                                </h5>
                            </div>
                            <p class="card-text text-secondary">@academicTrack3Body</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


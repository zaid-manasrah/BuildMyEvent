    string academicHeroTitle = string.IsNullOrWhiteSpace(Model.AcademicHeroTitle) ? Model.Name : Model.AcademicHeroTitle;
    string academicHeroSubtitle = string.IsNullOrWhiteSpace(Model.AcademicHeroSubtitle) ? Model.Description : Model.AcademicHeroSubtitle;
    string academicCtaText = string.IsNullOrWhiteSpace(Model.AcademicCtaText) ? "Submit Your Paper" : Model.AcademicCtaText;
    string academicTrack1Title = string.IsNullOrWhiteSpace(Model.AcademicTrack1Title) ? "Research Track" : Model.AcademicTrack1Title;
    string academicTrack1Body = string.IsNullOrWhiteSpace(Model.AcademicTrack1Body) ? "Peer-reviewed research presentations from universities and research institutes." : Model.AcademicTrack1Body;
    string academicTrack2Title = string.IsNullOrWhiteSpace(Model.AcademicTrack2Title) ? "Industry Track" : Model.AcademicTrack2Title;
    string academicTrack2Body = string.IsNullOrWhiteSpace(Model.AcademicTrack2Body) ? "Applied research and case studies from industry practitioners." : Model.AcademicTrack2Body;
    string academicTrack3Title = string.IsNullOrWhiteSpace(Model.AcademicTrack3Title) ? "Workshops & Tutorials" : Model.AcademicTrack3Title;
    string academicTrack3Body = string.IsNullOrWhiteSpace(Model.AcademicTrack3Body) ? "Hands-on tutorials and workshops led by experts." : Model.AcademicTrack3Body;
    string academicShareTitle = string.IsNullOrWhiteSpace(Model.AcademicShareTitle) ? "Share this conference with your colleagues and students" : Model.AcademicShareTitle;

    string publicLink = $"{Context.Request.Scheme}://{Context.Request.Host}/Events/Details/{Model.Slug}";
}

@if (Model.TemplateKey == "tech-pro")
{
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#020617;" id="top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#top">@Model.Name</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#eventNavTechPro">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="eventNavTechPro">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#top-hero">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#why-attend">Why attend</a></li>
                    <li class="nav-item"><a class="nav-link" href="#audience-cards">Who is this for</a></li>
                    <li class="nav-item"><a class="nav-link" href="#registration-section">Registration</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="event-details-tech-pro" style="background-color: #0f172a; color: #f8fafc; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <div id="top-hero" class="position-relative py-5" style="background: linear-gradient(rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.8)), url('https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1920&q=80') center/cover no-repeat; border-bottom: 1px solid #1e293b;">
            <div class="container py-5">
                <div class="row align-items-center">
                    <div class="col-lg-7 mb-4 mb-lg-0">
                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 mb-3 px-3 py-2 rounded-pill">
                            Tech Conference
                        </span>
                        <h1 class="display-4 fw-bold mb-3 text-white" style="text-shadow: 0 0 20px rgba(56,189,248,0.3);">
                            @Model.Name
                        </h1>
                        <p class="lead text-gray-300 mb-3" style="color: #cbd5e1;">@Model.Description</p>

                        @if (isOwner)
                        {
                            <div class="alert alert-info d-inline-flex align-items-center py-2 px-3 mb-3" role="alert">
                                <i class="bi bi-people me-2"></i>
                                <span>Registrations: <strong>@registrationsCount</strong></span>
                                <a asp-controller="Events"
                                   asp-action="Attendees"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-sm btn-outline-primary ms-3">
                                    View attendees
                                </a>
                            </div>
                        }

                        <div class="d-flex flex-wrap align-items-center gap-3 mt-2">
                            <a class="btn btn-info btn-lg px-5 fw-semibold"
                               href="@Url.Action("Register", "Registrations", new { slug = Model.Slug })"
                               style="background-color: #0ea5e9; border: none; box-shadow: 0 0 15px rgba(14, 165, 233, 0.4);">
                                Register Now
                            </a>
                            @if (isOwner)
                            {
                                <a class="btn btn-outline-light btn-lg px-4"
                                   href="@Url.Action("Edit", "Events", new { id = Model.Id })">
                                    Edit Event
                                </a>
                            }
                        </div>

                        <div class="mt-4 p-3 rounded"
                             style="background: rgba(30, 41, 59, 0.5); border: 1px solid #334155; display: inline-block;">
                            <small class="text-muted d-block mb-1">Public Share Link:</small>
                            <code class="text-info">@publicLink</code>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="card bg-dark border-0 shadow-lg"
                             style="background: rgba(30, 41, 59, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.1);">
                            <div class="card-body p-4" id="why-attend">
                                <h4 class="card-title mb-4 text-white">@whyAttendTitle</h4>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-3 d-flex align-items-center text-light">
                                        <i class="bi bi-cpu fs-5 me-3 text-info"></i>
                                        <span>@whyAttendPoint1</span>
                                    </li>
                                    <li class="mb-3 d-flex align-items-center text-light">
                                        <i class="bi bi-people fs-5 me-3 text-info"></i>
                                        <span>@whyAttendPoint2</span>
                                    </li>
                                    <li class="d-flex align-items-center text-light">
                                        <i class="bi bi-lightning-charge fs-5 me-3 text-info"></i>
                                        <span>@whyAttendPoint3</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container py-5" id="audience-cards">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0" style="background: #1e293b; color: #e2e8f0;">
                        <div class="card-body p-4">
                            <div class="mb-3 text-info"><i class="bi bi-shield-check fs-2"></i></div>
                            <h5 class="card-title fw-bold text-white mb-3">@card1Title</h5>
                            <p class="card-text small text-secondary">@card1Body</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0" style="background: #1e293b; color: #e2e8f0;">
                        <div class="card-body p-4">
                            <div class="mb-3 text-info"><i class="bi bi-code-slash fs-2"></i></div>
                            <h5 class="card-title fw-bold text-white mb-3">@card2Title</h5>
                            <p class="card-text small text-secondary">@card2Body</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0" style="background: #1e293b; color: #e2e8f0;">
                        <div class="card-body p-4">
                            <div class="mb-3 text-info"><i class="bi bi-share fs-2"></i></div>
                            <h5 class="card-title fw-bold text-white mb-3">@card3Title</h5>
                            <p class="card-text small text-secondary">@card3Body</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container pb-5" id="registration-section">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="h4 mb-3">Ready to join?</h2>
                    <p class="text-muted mb-4">
                        Secure your seat now and receive all the event details by email.
                    </p>
                    <a class="btn btn-info btn-lg px-5 fw-semibold"
                       href="@Url.Action("Register", "Registrations", new { slug = Model.Slug })">
                        Go to registration form
                    </a>
                </div>
            </div>
        </div>
    </section>
}


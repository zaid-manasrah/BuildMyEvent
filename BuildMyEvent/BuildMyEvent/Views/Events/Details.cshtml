    string card2Body = string.IsNullOrWhiteSpace(Model.TechProCard2Body) ? "Deep-dive technical talks, live coding sessions, and real-world case studies from top companies and startups." : Model.TechProCard2Body;
    string card3Title = string.IsNullOrWhiteSpace(Model.TechProCard3Title) ? "Share with your team" : Model.TechProCard3Title;
    string card3Body = string.IsNullOrWhiteSpace(Model.TechProCard3Body) ? "Invite your colleagues and build a shared vision for the future of your tech organization." : Model.TechProCard3Body;

    // --- Creative Spark Variables ---
    string creativeHeroTitle = string.IsNullOrWhiteSpace(Model.CreativeHeroTitle) ? Model.Name : Model.CreativeHeroTitle;
    string creativeHeroSubtitle = string.IsNullOrWhiteSpace(Model.CreativeHeroSubtitle) ? Model.Description : Model.CreativeHeroSubtitle;
    string creativeCtaText = string.IsNullOrWhiteSpace(Model.CreativeCtaText) ? "Join This Creative Event" : Model.CreativeCtaText;
    string creativeShareTitle = string.IsNullOrWhiteSpace(Model.CreativeShareTitle) ? "Share this link" : Model.CreativeShareTitle;

    // --- Business Elite Variables ---
    string businessHeroBadge = string.IsNullOrWhiteSpace(Model.BusinessHeroBadge) ? "Executive Conference" : Model.BusinessHeroBadge;
    string businessHeroTitle = string.IsNullOrWhiteSpace(Model.BusinessHeroTitle) ? Model.Name : Model.BusinessHeroTitle;
    string businessHeroSubtitle = string.IsNullOrWhiteSpace(Model.BusinessHeroSubtitle) ? Model.Description : Model.BusinessHeroSubtitle;
    string businessCtaText = string.IsNullOrWhiteSpace(Model.BusinessCtaText) ? "Request Your Seat" : Model.BusinessCtaText;
    string businessCard1Title = string.IsNullOrWhiteSpace(Model.BusinessCard1Title) ? "For C‑Level Executives" : Model.BusinessCard1Title;
    string businessCard1Body = string.IsNullOrWhiteSpace(Model.BusinessCard1Body) ? "Strategic sessions focused on growth, innovation, and digital transformation for executive leaders." : Model.BusinessCard1Body;
    string businessCard2Title = string.IsNullOrWhiteSpace(Model.BusinessCard2Title) ? "For Business Leaders" : Model.BusinessCard2Title;
    string businessCard2Body = string.IsNullOrWhiteSpace(Model.BusinessCard2Body) ? "Actionable insights for heads of departments and decision makers driving organizational change." : Model.BusinessCard2Body;
    string businessCard3Title = string.IsNullOrWhiteSpace(Model.BusinessCard3Title) ? "For Partners & Sponsors" : Model.BusinessCard3Title;
    string businessCard3Body = string.IsNullOrWhiteSpace(Model.BusinessCard3Body) ? "Premium networking opportunities with executives and decision makers from leading organizations." : Model.BusinessCard3Body;
    string businessShareTitle = string.IsNullOrWhiteSpace(Model.BusinessShareTitle) ? "Share this event with your leadership team" : Model.BusinessShareTitle;

    // --- Minimalist Variables ---
    string minimalHeroTitle = string.IsNullOrWhiteSpace(Model.MinimalHeroTitle) ? Model.Name : Model.MinimalHeroTitle;
    string minimalHeroSubtitle = string.IsNullOrWhiteSpace(Model.MinimalHeroSubtitle) ? Model.Description : Model.MinimalHeroSubtitle;
    string minimalCtaText = string.IsNullOrWhiteSpace(Model.MinimalCtaText) ? "Register" : Model.MinimalCtaText;
    string minimalInfoTitle = string.IsNullOrWhiteSpace(Model.MinimalInfoTitle) ? "About this conference" : Model.MinimalInfoTitle;
    string minimalInfoBody = string.IsNullOrWhiteSpace(Model.MinimalInfoBody) ? "A focused event with a minimal, distraction-free experience for attendees." : Model.MinimalInfoBody;

    // --- Colorful Variables ---
    string colorfulHeroTitle = string.IsNullOrWhiteSpace(Model.ColorfulHeroTitle) ? Model.Name : Model.ColorfulHeroTitle;
    string colorfulHeroSubtitle = string.IsNullOrWhiteSpace(Model.ColorfulHeroSubtitle) ? Model.Description : Model.ColorfulHeroSubtitle;
    string colorfulCtaText = string.IsNullOrWhiteSpace(Model.ColorfulCtaText) ? "Join the Experience" : Model.ColorfulCtaText;
    string colorfulHighlight1 = string.IsNullOrWhiteSpace(Model.ColorfulHighlight1) ? "Live performances & interactive sessions" : Model.ColorfulHighlight1;
    string colorfulHighlight2 = string.IsNullOrWhiteSpace(Model.ColorfulHighlight2) ? "Vibrant community and networking" : Model.ColorfulHighlight2;
    string colorfulHighlight3 = string.IsNullOrWhiteSpace(Model.ColorfulHighlight3) ? "Creative workshops and showcases" : Model.ColorfulHighlight3;


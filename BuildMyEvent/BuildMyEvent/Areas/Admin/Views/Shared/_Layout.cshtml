@{
    Layout = null;
    ViewData["Title"] = ViewData["Title"] ?? "Admin Dashboard";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin - @ViewData["Title"] - BuildMyEvent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="bg-light">
    <div class="d-flex">
        <nav class="bg-dark text-white vh-100" style="width: 240px; position: fixed;">
            <div class="p-3 border-bottom border-secondary">
                <h4 class="mb-0">BuildMyEvent</h4>
                <small class="text-muted">Admin Panel</small>
            </div>
            <ul class="nav flex-column p-3">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @(currentAction == "Index" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Dashboard"
                       asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @(currentAction == "Users" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Dashboard"
                       asp-action="Users">
                        <i class="bi bi-people me-2"></i>Users
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @(currentAction == "Events" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Dashboard"
                       asp-action="Events">
                        <i class="bi bi-calendar-event me-2"></i>Events
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @(currentAction == "Registrations" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Dashboard"
                       asp-action="Registrations">
                        <i class="bi bi-list-check me-2"></i>Registrations
                    </a>
                </li>
            </ul>
        </nav>

        <main class="flex-grow-1" style="margin-left: 240px;">
            <header class="bg-white border-bottom py-2 px-4 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@ViewData["Title"]</h5>
                <div>
                    <a href="@Url.Action("Logout", "Account", new { area = "" })" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </div>
            </header>

            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
